extends ../layout/index

block content
    main.container.mt-5
        .row
            .col-md-12
                h1.text-center #{pageTitle}
            
            .col-md-12
                h2.text-center Add a Testimonial

                .row.justify-content-center
                    .col-md-8
                        form
                            .form-group
                                label(for="name") Name
                                input(id="name" type="text", class="form-control", placeholder="Your Name", name="name")
                            .form-group
                                label(for="email") Email
                                input(id="email" type="email", class="form-control", placeholder="Your Email", name="email")
                            .form-group
                                label(for="message") Message
                                textarea#message(class="form-control", placeholder="Your Message", name="message", rows="4")
                            input.btn.btn-success.btn-block(type="submit", value="Add Testimonial")